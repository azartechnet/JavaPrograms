import java.io.*;

public class Sample 
{
	
  String n="niit";	
	
  void writeData()throws IOException,FileNotFoundException
  {
	  FileOutputStream fos1=new FileOutputStream("D:\\v1.txt");
	  FileOutputStream fos2=new FileOutputStream("D:\\v2.txt");
	  FileInputStream fis1=new FileInputStream("D:\\v3.txt");
	  SequenceInputStream sis=new SequenceInputStream(fos1,fos2);
	  byte f[]=n.getBytes();
	  
	  fos1.write(f);
	  fos2.write(f);
	  
	  System.out.println("TwoFileInserted..");
	  
	  
	  
  }
	public static void main(String[] args) throws FileNotFoundException, IOException
	{
		Sample g=new Sample();
		g.writeData();

	}

}
