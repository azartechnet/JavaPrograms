
public class Sample
{

	
	void get1()
	{
		try
		{
		int a=100/0;
		System.out.println("welcome to Method-1");
		}
		catch(Exception t)
		{
			System.out.println("Please check input.."+t);
		}
		
	}
	void get2()
	{
		System.out.println("Method-2");
	}
}

class Demo
{
	public static void main(String[] args) 
	{
		Sample f1=new Sample();
		f1.get1();
		f1.get2();

	}

}
